<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eseict.mapper.EmployeeMapper">

	<resultMap type="com.eseict.VO.EmployeeVO" id="EmployeeVO-result">
		<id column="employee_seq" property="employeeSeq"/>
		<result column="employee_name" property="employeeName"/>
		<result column="employee_id" property="employeeName"/>
		<result column="employee_pw" property="employeeId"/>
		<result column="employee_rank" property="employeeRank"/>
		<result column="employee_department" property="employeeDepartment"/>
		<result column="employee_location" property="employeeLocation"/>
		<result column="employee_email" property="employeeEmail"/>
		<result column="employee_phone" property="employeePhone"/>
		<result column="employee_status" property="employeeStatus"/>
	</resultMap>

	<insert id="newEmployee">
		INSERT INTO employee VALUES
		(nextval('employee_sequence'), #{employeeName}, #{employeeId}, #{employeePw}, #{employeeRank},
		#{employeeDepartment}, #{employeeLocation}, #{employeeEmail}, #{employeePhone}, #{employeeStatus})
	</insert>

	<select id="checkIdDuplication" resultType="String">
		SELECT
			employee_id
		FROM
			employee
		WHERE
			employee_id=#{employeeId}
	</select>
	
	<select id="checkRegistered" parameterType="hashmap" resultType="integer">
		SELECT
			count(*)
		FROM
			employee
		WHERE
			employee_id=#{id} AND
			employee_pw=#{pw}			
	</select>
	
	<select id="getEmployeeList" resultType="com.eseict.VO.EmployeeVO" >
		SELECT e.employee_seq as "employeeSeq", 
			   e.employee_name as "employeeName", 
			   e.employee_id as "employeeId", 
			   r.employee_rank_string as "employeeRank", 
			   d.employee_department_string as "employeeDepartment", 
			   e.employee_location as "employeeLocation", 
			   e.employee_email as "employeeEmail", 
			   e.employee_phone as "employeePhone", 
			   e.employee_status as "employeeStatus"
		FROM employee e, rank r, department d 
		where e.employee_rank = r.employee_rank 
			  and e.employee_department = d.employee_department
	</select>
 
	<select id="selectEmployeeByEmployeeSeq" parameterType="integer" resultMap="EmployeeVO-result">
	select * 
	from employee 
	where employee_seq = #{employeeSeq}
	</select>
	
</mapper>